<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:gravity="left"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="15dp">

        <ImageView
            android:id="@+id/home_Iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:background="@null"
            android:src="@drawable/home" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="40dp"
            android:paddingRight="20dp"
            android:fontFamily="@font/basic_font"
            android:text="Store Manage"
            android:textColor="#000000"
            android:textSize="35dp" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:fontFamily="@font/basic_font"
                    android:text="가게명"
                    android:maxLines="1"
                    android:textColor="#787878"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/store_name_Et"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/login_radius"
                    android:hint="가게 이름을 입력해주세요"
                    android:paddingLeft="10dp"
                    android:textColorHint="#787878" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/basic_font"
                    android:text="주소"
                    android:textColor="#787878"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/store_address_Et"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/login_radius"
                    android:hint="주소를 입력해주세요"
                    android:paddingLeft="10dp"
                    android:textColorHint="#787878" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/basic_font"
                    android:text="대표 전화번호"
                    android:textColor="#787878"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/store_phone_Et"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/login_radius"
                    android:hint="전화번호를 입력해주세요"
                    android:maxLines="1"
                    android:phoneNumber="true"
                    android:paddingLeft="10dp"
                    android:textColorHint="#787878" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/basic_font"
                    android:text="가게 소개"
                    android:textColor="#787878"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/store_intro_Et"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/login_radius"
                    android:hint="가게 소개를 입력해주세요"
                    android:elegantTextHeight="true"
                    android:paddingLeft="10dp"
                    android:textColorHint="#787878" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/basic_font"
                    android:text="판매 상품"
                    android:textColor="#787878"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/store_item_Et"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/login_radius"
                    android:hint="판매 상품을 입력해주세요"
                    android:elegantTextHeight="true"
                    android:paddingLeft="10dp"
                    android:textColorHint="#787878" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/basic_font"
                    android:text="영업 시간을 입력해주세요"
                    android:textColor="#787878"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/store_time_Et"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/login_radius"
                    android:hint="영업 시간을 입력해주세요"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:textColorHint="#787878" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/basic_font"
                    android:text="흥정여부"
                    android:textColor="#787878"
                    android:textSize="25dp" />

                <CheckBox
                    android:id="@+id/store_sale_Cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp" />

                <TextView
                    android:id="@+id/submit_Tv"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/yellow_radius"
                    android:clickable="true"
                    android:fontFamily="@font/basic_font"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginBottom="30dp"
                    android:text="Submit"
                    android:textColor="#ffffff"
                    android:textSize="25dp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>