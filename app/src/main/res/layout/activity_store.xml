<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/yellow_radius2">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/store_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가게 이름"
                android:textSize="25dp"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/store_tv_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="설명"
                android:textSize="15dp"
                android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/store_tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가게 주소"
                android:textSize="15dp"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/store_tv_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="판매 상품"
                android:textSize="15dp"
                android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/store_tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전화번호"
                android:textSize="15dp"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/store_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시간"
                android:textSize="15dp"
                android:layout_margin="5dp"/>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>