<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:gravity="center"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    <ImageView
        android:id="@+id/home_intro_Iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_gravity="center"
        android:background="@null"
        android:src="@drawable/home" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2">
    <TextView
        android:id="@+id/store_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:fontFamily="@font/basic_font"
        android:textColor="#000000"
        android:text="가게 이름"
        android:textSize="40dp" />
    </LinearLayout>
</LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp">

        <LinearLayout
            android:id="@+id/box"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/basic_font"
                android:maxLines="1"
                android:text="가게 소개"
                android:textColor="#787878"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/store_tv_intro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/login_radius"
                android:padding="5dp"
                android:text="설명"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/basic_font"
                android:maxLines="1"
                android:text="주소"
                android:textColor="#787878"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/store_tv_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/login_radius"
                android:padding="5dp"
                android:text="가게 주소"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/basic_font"
                android:maxLines="1"
                android:text="판매 상품"
                android:textColor="#787878"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/store_tv_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/login_radius"
                android:padding="5dp"
                android:text="판매 상품"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/basic_font"
                android:maxLines="1"
                android:text="전화번호"
                android:textColor="#787878"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/store_tv_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/login_radius"
                android:padding="5dp"
                android:text="전화번호"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/basic_font"
                android:maxLines="1"
                android:text="영업시간"
                android:textColor="#787878"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/store_tv_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/login_radius"
                android:padding="5dp"
                android:text="시간"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/store_tv_sale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/basic_font"
                android:maxLines="1"
                android:text="흥정여부"
                android:textSize="15dp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="10">
            <TextView
                android:id="@+id/Review_view_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/yellow_radius"
                android:clickable="true"
                android:fontFamily="@font/basic_font"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_weight="5"
                android:text="후기보기"
                android:textColor="#ffffff"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/Review_write_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="30dp"
                android:layout_weight="5"
                android:background="@drawable/yellow_radius"
                android:clickable="true"
                android:fontFamily="@font/basic_font"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="후기작성"
                android:textColor="#ffffff"
                android:textSize="25dp" />


</LinearLayout>

            <TextView
                android:id="@+id/Order_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="30dp"
                android:layout_weight="5"
                android:background="@drawable/yellow_radius"
                android:clickable="true"
                android:fontFamily="@font/basic_font"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="주문하기"
                android:textColor="#ffffff"
                android:textSize="25dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>